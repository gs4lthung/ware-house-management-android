<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:stretchColumns="*">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="@dimen/column_width"
            android:gravity="start"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/requestQuantity"
            android:layout_width="@dimen/column_width"
            android:gravity="start"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/actualQuantity"
            android:layout_width="@dimen/column_width"
            android:focusable="false"
            android:gravity="start"
            android:inputType="number"
            android:text="Actual Qty"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/inputPrice"
            android:layout_width="@dimen/column_width"
            android:focusable="false"
            android:gravity="start"
            android:inputType="number"
            android:text="Input Price"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/suggestedOutputPrice"
            android:layout_width="@dimen/column_width"
            android:gravity="start"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="@dimen/column_width"
            android:gravity="start"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/updatedBy"
            android:layout_width="@dimen/column_width"
            android:gravity="start"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/createdAt"
            android:layout_width="@dimen/column_width"
            android:gravity="start"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/updatedAt"
            android:layout_width="@dimen/column_width"
            android:gravity="start"
            android:textSize="12sp" />

    </TableRow>

</TableLayout>